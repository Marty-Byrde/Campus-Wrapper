            app:layout_constraintTop_toBottomOf="@+id/lblSWSLVD" app:layout_constraintStart_toStartOf="@+id/lblSWSLVD"
            app:layout_constraintEnd_toEndOf="@+id/lblSWSLVD" app:layout_constraintHorizontal_bias="0.135"/>
    <TextView
            android:id="@+id/txtECTSLVD"
            android:layout_width="160dp"
            android:layout_height="19dp"
            android:layout_marginTop="4dp"
            android:text="4.0"
            app:layout_constraintStart_toStartOf="@+id/lblECTSLVD"
            app:layout_constraintTop_toBottomOf="@+id/lblECTSLVD" app:layout_constraintEnd_toEndOf="@+id/lblECTSLVD"/>
