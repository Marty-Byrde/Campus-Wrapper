            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/lblSpracheLVD" />
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="3dp"
            app:layout_constraintTop_toBottomOf="@+id/txtLVNameLVD" android:background="@color/divider_color"
