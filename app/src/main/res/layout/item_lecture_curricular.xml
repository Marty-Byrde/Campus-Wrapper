<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="wrap_content">

    <TextView
            android:text="Bachelorstudium Angewandte Betriebswirtschaft"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/txtCurricularHeading"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp" android:layout_marginStart="16dp" android:textStyle="bold"/>
    <TextView
            android:text="Fach: Methoden der Sozial- und Wirtschaftswissenschaften (Pflichtfach) "
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/txtCurricularCategory"
            app:layout_constraintTop_toBottomOf="@+id/txtCurricularHeading"
            android:layout_marginTop="8dp" android:textSize="14sp" app:layout_constraintStart_toEndOf="@+id/imageView"
            android:layout_marginStart="42dp"/>
    <TextView
            android:text=" 4.1. Methoden 1: Mathematik ( 0.0h VO, VI / 4.0 ECTS) "
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/txtCurricularSection"
            app:layout_constraintTop_toBottomOf="@+id/txtCurricularCategory"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="50dp"
            android:layout_marginTop="8dp"/>
    <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp" app:srcCompat="@drawable/right_arrow" android:id="@+id/imageView"
            app:layout_constraintBottom_toBottomOf="@+id/txtCurricularCategory"
            app:layout_constraintTop_toTopOf="@+id/txtCurricularCategory" app:layout_constraintStart_toStartOf="@+id/txtCurricularHeading"
            android:layout_marginStart="8dp" android:alpha="0.6"/>
    <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp" app:srcCompat="@drawable/right_arrow" android:id="@+id/imageView3"
            android:alpha="0.6"
            app:layout_constraintStart_toStartOf="@+id/imageView"
            android:layout_marginStart="8dp" app:layout_constraintTop_toTopOf="@+id/txtCurricularSection"
            app:layout_constraintBottom_toBottomOf="@+id/txtCurricularSection"/>
    <TextView
            android:text="311.950 Methoden I: Mathematik (2.0h VO / 4.0 ECTS) "
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/txtCurricularLecture"
            app:layout_constraintTop_toBottomOf="@+id/txtCurricularSection"
            android:layout_marginTop="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="58dp"/>
    <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp" app:srcCompat="@drawable/right_arrow" android:id="@+id/imageView4"
            app:layout_constraintStart_toStartOf="@+id/imageView3"
            android:layout_marginStart="8dp" app:layout_constraintTop_toTopOf="@+id/txtCurricularLecture"
            app:layout_constraintBottom_toBottomOf="@+id/txtCurricularLecture" android:alpha="0.6"/>
    <TextView
            android:text="Absolvierung im 3. Semester empfohlen "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/txtCurricularSuggestion"
            app:layout_constraintStart_toStartOf="@+id/txtCurricularLecture" app:layout_constraintTop_toBottomOf="@+id/txtCurricularLecture"
            android:layout_marginTop="8dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>