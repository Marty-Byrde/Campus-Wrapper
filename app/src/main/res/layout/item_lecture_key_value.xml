<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="wrap_content">

    <TextView
            android:text="FieldName:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/txtKeyValueHeading"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="16dp" android:layout_marginTop="16dp" android:textStyle="bold"
            android:textSize="16dp"/>
    <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/txtKeyValueHeading"
            app:layout_constraintStart_toStartOf="@+id/txtKeyValueHeading"
            android:layout_marginTop="4dp" android:layout_marginStart="25dp" android:id="@+id/recycleKeyValue"/>
</androidx.constraintlayout.widget.ConstraintLayout>