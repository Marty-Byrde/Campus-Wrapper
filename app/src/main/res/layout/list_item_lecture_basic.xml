<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="wrap_content">


    <TextView
            android:text="KS"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/txtLectureType_ListElement"
            android:textStyle="bold" android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="@+id/txtLectureID_ListElement"
            app:layout_constraintStart_toStartOf="@+id/txtLectureID_ListElement"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/txtLectureID_ListElement" android:textColor="#FF9800"/>
    <TextView
            android:text=" Lecture Series: Engineering: Human and Machine. Social Technological Design and Technological Impact Assessment "
            android:layout_width="0dp"
            android:layout_height="wrap_content" android:id="@+id/txtLectureName_ListElement"
            android:textSize="16sp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/txtLectureID_ListElement" android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"/>
    <TextView
            android:text="Mag. Dr. Julian David Anslinger, Mag. Mag. Utta Isop, ..."
            android:layout_width="0dp"
            android:layout_height="16dp" android:id="@+id/txtLectureContributors_ListElement"
            app:layout_constraintTop_toBottomOf="@+id/txtLectureName_ListElement"
            android:layout_marginTop="4dp" android:alpha="0.5" android:textSize="12sp"
            app:layout_constraintStart_toStartOf="@+id/txtLectureName_ListElement"
            app:layout_constraintEnd_toEndOf="@+id/txtLectureName_ListElement"
            app:layout_constraintHorizontal_bias="0.0" android:layout_marginEnd="4dp"/>
    <TextView
            android:text="010.017"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/txtLectureID_ListElement"
            android:textStyle="bold" android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintTop_toBottomOf="@+id/txtLectureType_ListElement"
            app:layout_constraintBottom_toTopOf="@+id/constraintLayout"/>
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/divider_color" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="4dp" app:layout_constraintTop_toBottomOf="@+id/txtLectureContributors_ListElement"
            android:id="@+id/constraintLayout">

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>