<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="wrap_content">

    <TextView
            android:text="Lecture Description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/txtKeyValueContainerHeading"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="4dp" android:textStyle="bold"
            android:textSize="16sp"/>
    <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="400dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="24dp"
            android:layout_marginTop="4dp" app:layout_constraintTop_toBottomOf="@+id/txtKeyValueContainerHeading"
            android:id="@+id/recyclerKeyValueContainer"/>
</androidx.constraintlayout.widget.ConstraintLayout>