<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="wrap_content"
                                                   android:id="@+id/sessionContainer">


    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#5B03A9F4" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="4dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginBottom="4dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="4dp" android:layout_marginEnd="4dp"
            android:id="@+id/item_session_container">

        <TextView
                android:text="HS A"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/txtSessionLocation"
                android:textSize="12sp"
                app:layout_constraintTop_toTopOf="@+id/txtSessionDate"
                app:layout_constraintStart_toEndOf="@+id/imageView7"
                android:layout_marginStart="8dp"/>
        <TextView
                android:text="On Campus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/txtSessionCampus"
                android:textSize="12sp"
                app:layout_constraintTop_toTopOf="@+id/imageView8" app:layout_constraintStart_toEndOf="@+id/imageView8"
                android:layout_marginStart="8dp"/>
        <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp" tools:srcCompat="@drawable/placeholder" android:id="@+id/imageView7"
                app:layout_constraintTop_toTopOf="@+id/txtSessionDate"
                app:layout_constraintStart_toEndOf="@+id/txtSessionDate"
                android:layout_marginStart="66dp"/>
        <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp" tools:srcCompat="@drawable/check_mark" android:id="@+id/imageView8"
                app:layout_constraintStart_toStartOf="@+id/imageView7"
                app:layout_constraintTop_toBottomOf="@+id/imageView7" android:layout_marginTop="12dp"/>
        <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp" tools:srcCompat="@drawable/schedule" android:id="@+id/imageView6"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="9dp" app:layout_constraintStart_toEndOf="@+id/lblSessionType"
                android:layout_marginStart="24dp"/>
        <TextView
                android:text="14:00 pm - 16:00 pm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/txtSessionTime"
                android:textSize="12sp"
                app:layout_constraintTop_toBottomOf="@+id/txtSessionDate" android:layout_marginTop="10dp"
                app:layout_constraintStart_toEndOf="@+id/imageView5" android:layout_marginStart="8dp"/>
        <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp" tools:srcCompat="@drawable/clock" android:id="@+id/imageView5"
                app:layout_constraintTop_toBottomOf="@+id/imageView6"
                android:layout_marginTop="10dp" app:layout_constraintStart_toStartOf="@+id/imageView6"/>
        <TextView
                android:text="Mon, Jan 13 2023"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/txtSessionDate"
                android:textSize="12sp" app:layout_constraintTop_toTopOf="@+id/imageView6"
                app:layout_constraintStart_toEndOf="@+id/imageView6"
                android:layout_marginStart="8dp"/>
        <TextView
                android:text="Weekly"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/lblSessionType"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/seperator_session" android:layout_marginStart="16dp"
                app:layout_constraintVertical_bias="0.512"/>
        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="3dp"
                android:layout_height="60dp"
                android:background="#03A9F4"
                android:id="@+id/seperator_session"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="1dp" app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp">


        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>